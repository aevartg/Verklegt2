@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <label for="model.Name" class="control-label col-md-2">Name:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label for="model.AvailableTeachers" class="control-label col-md-2">Search Teachers:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AvailableTeachers, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.AvailableTeachers, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

    
}
