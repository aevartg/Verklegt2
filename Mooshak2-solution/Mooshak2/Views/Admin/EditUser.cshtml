@model Mooshak2.Models.EditUserSettingsViewModel

@{
    ViewBag.Title = "EditUser";
}

<div class="container container-custom">
	<div class="row">
		<div class="col-md-2">
			<nav class="w3-sidenav w3-white w3-card-2 custom-nav custom-adminnav">
				@if (Model.NavModel.ToList().Count == 0)
				{
					<p>No courses</p>
				}
				else
				{
					foreach (var c in Model.NavModel.ToList())
					{
						@Ajax.ActionLink(c.Name, "ContentRender", "Admin", new { id = c.Id }, new AjaxOptions() { UpdateTargetId = "content", InsertionMode = InsertionMode.Replace }, new { @class = "custom-navanchor" })
					}
				}
				<a class="custom-navanchor" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#content" href="/admin/ListUsers?Length=5">List of users <i class="fa fa-users custom-icon" aria-hidden="true"></i></a>
				<a class="custom-adder" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#content" href="/admin/Create"><i class="fa fa-plus-square" aria-hidden="true"></i> Add course</a>
				<a class="custom-adder" href="/Account/CreateUser"><i class="fa fa-plus-square" aria-hidden="true"></i>  Add user</a>

			</nav>
		</div>
		<div id="content" class="col-md-10">
			<h2>EditUser</h2>

			@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<h4>Edit User.</h4>
				<hr/>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(x => x.Id)
				<div class="form-group">
					@Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						
							@if (Model.UserType == 1)
							{
								<div class="radio">
									<label>Student?</label>
									@Html.RadioButtonFor(m => m.UserType, "0")
								</div>
								<div class="radio">
									<label>Teacher?</label>
									@Html.RadioButtonFor(m => m.UserType, "1", new { Checked = "checked"})
								</div>
								<div class ="radio">
									<label>Admin?</label>
									@Html.RadioButtonFor(m => m.UserType, "2")
								</div>
							}
							else if (Model.UserType == 2)
							{
								<div class="radio">
									<label>Student?</label>
									@Html.RadioButtonFor(m => m.UserType, "0")
								</div>
								<div class="radio">
									<label>Teacher?</label>
									@Html.RadioButtonFor(m => m.UserType, "1")
								</div>
								<div class="radio">
									<label>Admin?</label>
									@Html.RadioButtonFor(m => m.UserType, "2", new { Checked = "checked" })
								</div>
							}
							else
							{
								<div class="radio">
									<label>Student?</label>
									@Html.RadioButtonFor(m => m.UserType, "0", new { Checked = "checked" })
								</div>
								<div class="radio">
									<label>Teacher?</label>
									@Html.RadioButtonFor(m => m.UserType, "1")
								</div>
								<div class="radio">
									<label>Admin?</label>
									@Html.RadioButtonFor(m => m.UserType, "2")
								</div>
							}
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" class="btn btn-default" value="Edit"/>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						@Html.ActionLink("Delete", "DeleteUser", new { Id = Model.Id});
					</div>
				</div>
			}
		</div>
	</div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}