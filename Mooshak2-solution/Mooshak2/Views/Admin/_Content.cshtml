@model Mooshak2.Models.EdtiCourseViewModel
@{
	ViewBag.Title = Model.Name;
}
<script type=@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")></script>
@Scripts.Render("~/Scripts/Custom.js")

<h2>@Model.Name</h2>

@{using (Html.BeginForm(/*"Edit", "Admin", FormMethod.Post, new { id = "createform" }*/))
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })

			<div class="form-group custom-coursename">
				<label for="model.Name" class="control-label col-md-2">Name:</label>
				<div class="col-md-10">
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group custom-container">
				<div class="col-md-10 custom-leitarboxkennara userlist1 hider">
					<input type="text" class="form-control leitarbox" placeholder="Search Teachers" /><br />
				</div>
				<div class="col-md-10 custom-leitarboxkennara userlist2 hider">
					<input type="text" class="form-control leitarbox" placeholder="Search Students" /><br />
				</div>
			</div>
			<div class="custom-container custom-radio">
				<input type="radio" id="Teachers" name="users" value="1" checked="checked" />
				<label for="Teachers">Teachers</label>
				<input type="radio" id="Students" name="users" value="2" />
				<label for="Students">Students</label>
				<label class="custom-label1">Teachers in Course:</label>
				<label class="custom-label2">Students in Course:</label>
			</div>

			<div class="container custom-container">

				<div class="form-group col-md-3 userlist1 hider">
					@Html.ListBoxFor(x => x.TeachersInCourse, Model.Teachers, new { id = "notselected", @class = "leitarlisti searchclass", size = "15" })
					@Html.ValidationMessageFor(model => model.Teachers, "", new { @class = "text-danger" })
				</div>
				<div class="form-group col-md-3 userlist2 hider">
					@Html.ListBoxFor(x => x.StudentsInCourse, Model.Students, new { id = "notselectedstudent", @class = "leitarlisti searchclass", size = "15" })
					@Html.ValidationMessageFor(model => model.Students, "", new { @class = "text-danger" })
				</div>

				<div class="form-group col-md-3">
					@Html.ListBoxFor(x => x.SelectedTeachers, Model.TeachersInCourse, new { id = "selected", @class = "leitarlisti notsearch", size = "15" })
					@Html.ValidationMessageFor(model => model.TeachersInCourse, "", new { @class = "text-danger" })
				</div>
				<div class="form-group col-md-3">
					@Html.ListBoxFor(x => x.SelectedStudents, Model.StudentsInCourse, new { id = "selectedstudent", @class = "leitarlisti notsearch", size = "15" })
					@Html.ValidationMessageFor(model => model.StudentsInCourse, "", new { @class = "text-danger" })
				</div>
				<div class="form-group col-md-3">
					<div class="custom-button">
						<input type="submit" value="Edit course" class="btn btn-default" />
					</div>
					<div class="custom-button">
						@Html.ActionLink("Cancel", "Index", "Admin", null, new { @class = "btn btn-default" })

					</div>
				</div>
			</div>

			<div class="userlist1 hider custom-container">
				<input type="button" id="add" value="Add Teacher" class="btn btn-default" />
			</div>
			<div class="userlist2 hider custom-container">
				<input type="button" id="addstudent" value="Add Student" class="btn btn-default"/>
			</div>
			<input type="button" id="RemoveTeacher" value="Remove Teacher" class="btn btn-danger"/>
		</div>

	}
}