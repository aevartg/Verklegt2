@model Mooshak2.Models.CreateCourseViewModel
@{
    ViewBag.Title = "Create";
}
<h2>New Course</h2>


	 @{using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { id = "createform" }))
        {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group custom-coursename">
                <label for="model.Name" class="control-label col-md-2">Name:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 custom-leitarboxkennara userlist1 hider">
                    <input type="text" class="form-control leitarbox" placeholder="Search Teachers"/><br/>
                </div>
                <div class="col-md-10 custom-leitarboxkennara userlist2 hider">
                    <input type="text" class="form-control leitarbox" placeholder="Search Students" /><br />
                </div>
            </div>
            <div>
                <input type="radio" id="Teachers" name="users" value="1" checked="checked"/>
                <label for="Teachers">Teachers</label>
                <input type="radio" id="Students" name="users" value="2" />
                <label for="Students">Students</label>
            </div>

            <div class="container">
                
                <div class="form-group col-md-3 userlist1 hider">
                    @Html.ListBoxFor(x => x.SelectedTeachers, Model.Teachers, new {id = "notselected", @class = "leitarlisti searchclass", size = "15"})
                    @Html.ValidationMessageFor(model => model.Teachers, "", new {@class = "text-danger"})
                </div>
                <div class="form-group col-md-3 userlist2 hider">
                    @Html.ListBoxFor(x => x.SelectedStudents, Model.Students, new {id = "notselectedstudent", @class = "leitarlisti searchclass", size = "15"})
                    @Html.ValidationMessageFor(model => model.Students, "", new {@class = "text-danger"})
                </div>

                <div class="form-group col-md-3">
                    @Html.ListBoxFor(x => x.SelectedTeachers, new List<SelectListItem>(), new {id = "selected", @class = "leitarlisti notsearch", size = "15"})
                    @Html.ValidationMessageFor(model => model.SelectedTeachers, "", new {@class = "text-danger"})
                </div>
                <div class="form-group col-md-3">
                    @Html.ListBoxFor(x => x.SelectedStudents, new List<SelectListItem>(), new {id = "selectedstudent", @class = "leitarlisti notsearch", size = "15"})
                    @Html.ValidationMessageFor(model => model.SelectedTeachers, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class = "userlist1 hider">
                <input type="button" id="add" value="Add Teacher" class="btn btn-default"/>
            </div>
            <div class ="userlist2 hider">
                <input type="button" id="addstudent" value="Add Student" class="btn btn-default" />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

        }
	 }


