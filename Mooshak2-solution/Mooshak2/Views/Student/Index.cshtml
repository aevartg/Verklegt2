@using Mooshak2.Services
@model IEnumerable<Mooshak2.Models.CourseViewModel>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="row">
        <nav class="w3-sidenav w3-light-grey w3-card-2 custom-nav" style ="width: 200px;">
                @foreach (var c in Model.ToList())
                {
                    <h4>@c.Name</h4>
                    foreach (var a in c.Assignments)
                    {
                        <div class ="w3-accordion">                                       
                        <a href="#" class="accordion-anchor">@a.Name</a>
                        @foreach (var m in a.Milestones)
                        {
                            <div class="w3-accordion-content w3-white w3-card-4">
                                <a href="#">@m.Name</a>
                            </div> 
                        }
                        </div>
                    }
                }        
        </nav>
    </div>  
</div>











