@using Mooshak2.Services
@model IEnumerable<Mooshak2.Models.CourseViewModel>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            
                @foreach (var c in Model.ToList())
                {
                    <ul id="navbar">
                        <a href="#">@c.Name</a>

                        @foreach (var a in c.Assignments)
                        {
                            <a href="#">@a.Name</a>

                            foreach (var m in a.Milestones)
                            {
                                <a href="#">@m.Name</a>
                            }
                        }
                    </ul>
                }
                    
        </div>
    </div>  
</div>











